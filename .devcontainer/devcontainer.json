{
  "name": "Flutter Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "FLUTTER_VERSION": "stable"
    }
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "Dart-Code.dart-code",
    "Dart-Code.flutter"
  ],
  "postCreateCommand": "flutter doctor -v && flutter config --enable-web",
  "forwardPorts": [8080, 3000],
  "remoteUser": "vscode"
}
